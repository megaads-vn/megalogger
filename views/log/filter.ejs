<form class="row">
    <div class="form-group" style="margin-bottom: 15px">
        <label for="inputEmail3" class="col-sm-1" style="padding-right: 0; padding-top: 10px;">Source</label>
        <div class="col-sm-10">
            <select class="selectpicker" ng-model="filter.source"
                    ng-change="find()"
                    ng-options="item.name for item in sources track by item.name">
            </select>
        </div>
        <div class="clear"></div>
    </div>
    <div class="clear"></div>
    <div class="form-group">
        <div class="col-sm-3">
            <input type="text"  placeholder="Keyword" class="form-control" ng-model="filter.keyword"/>
        </div>
        <div class="col-sm-3">
            <input type="text"  placeholder="Field" class="form-control" ng-model="filter.field"/>
        </div>
<!--        <div class="col-sm-3">
            <input type="text"  placeholder="Filed" class="form-control" />
        </div>-->
        <div class="col-sm-3">
            <select class="selectpicker" ng-model="filter.level" ng-change="find()">
                <option value="">Choose Level</option>
                <option ng-repeat="item in levels" class="{{item.class}} logger ellipsis" value="{{item.value}}">{{item.name}}</option>
            </select>
        </div>
        <div class="clear"></div>
    </div>
    <div class="clearfix"></div>
    <div class="col-md-5">
        <div class="form-group">
            <div class="input-group date">
                <input type="text" placeholder="Time From" class="form-control datepicker" ng-model="filter.timeFrom" ng-change="find()" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>
    <div class="col-md-5">
        <div class="form-group">
            <div class="input-group date">
                <input type="text" placeholder="Time To" class="form-control datepicker" ng-model="filter.timeTo" ng-change="find()"/>
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>
    <div class="col-sm-2 text-right">
        <button class="btn btn-primary" ng-click="find()">Find</button>
        <button class="btn btn-warning" ng-click="reset()">Reset</button>
    </div>
    <div class="clear"></div>
</form>